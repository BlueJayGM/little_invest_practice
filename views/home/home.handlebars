<!-- SCRIPTS -->

<script>
  const btn_left = document.querySelector('.btn-move-left');
  const btn_right = document.querySelector('.btn-move-right');
  const ctn_investments = document.querySelector('.scroller');

  let intervalID = 0;

  function applyScroller(item, cond) {
    if (item && item != null && item != undefined ) {
      console.log(item);
      item.addEventListener('click', cond == 'left' ? onListeningLeftArrow : onListeningRightArrow);

      item.addEventListener('mousedown', (event) => {
        intervalID = setInterval(cond == 'left' ? onListeningLeftArrow : onListeningRightArrow, 100);
      });
      item.addEventListener('mouseup', disableInterval);
    }
  }

  applyScroller(btn_left, 'left');
  applyScroller(btn_right, 'right');

  function onListeningLeftArrow() {
    ctn_investments.scrollLeft -= 20 * (2.25);
  }

  function onListeningRightArrow() {
    ctn_investments.scrollLeft += 20 * (2.25);
  }

  function disableInterval() {
    if ( intervalID != 0 ){
      clearInterval(intervalID);
      intervalID = 0;
    }
  }

</script>